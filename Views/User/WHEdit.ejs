<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <%- include('../head') %>
  <script src="/JS/jquery.serializeObject.js"></script>
  <script src="/JS/editWH.js"></script>
</head>

<body>
  <div class="wrap">
    <header>
      <%- include('../nav_Bar') %>
      <div class="page-header page-header-small">
        <div class="page-header-image" data-parallax="true" style="background-image: url('/Image/about_WH.jpg');"></div>
      </div>
    </header>
    <section>
      <div class="container">
        <h2 class="mt-5 mb-5">
          <%= __('WHEdit_edit')%>
        </h2>
        <form action="Edit/Save" method="post" enctype="multipart/form-data" id="enrollForm" onsubmit="return false;">
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">
              <%= __('WHEdit_wh_name')%>
            </label>
            <div class="col-sm-4"><input type="text" class="form-control" value="<%= wh.warehouseName %>" readonly>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">
              <%= __('WHEdit_wh_address')%>
            </label>
            <div class="col-sm-2">
              <input type="text" class="form-control" value="<%= wh.zipcode %>" readonly>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-3 col-form-label"></label>
            <div class="col-sm-8">
              <input type="text" class="form-control" value="<%= wh.address %>" readonly>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-3 col-form-label"></label>
            <div class="col-sm-8">
              <input type="text" class="form-control" value="<%= wh.addressDetail %>" readonly>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">
              <%= __('WHEdit_email')%>
            </label>
            <div class="col-sm-4">
              <input
                type="text"
                class="form-control"
                id="warehouseEmail"
                name="warehouseEmail"
                value="<%= wh.warehouseEmail %>"
                placeholder="<%= __('WHEdit_email_ph')%>">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">
              <%= __('WHEdit_tel')%>
            </label>
            <div class="col-sm-4">
              <input
                type="text"
                class="form-control"
                id="warehouseTel"
                name="warehouseTel"
                value="<%= wh.warehouseTEL %>"
                placeholder="<%= __('WHEdit_tel_ph')%>">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">
              <%= __('WHEdit_land_area')%>
            </label>
            <div class="col-sm-4">
              <input
                type="text"
                class="form-control"
                id="landArea"
                name="landArea"
                value="<%= wh.landArea %>"
                placeholder="<%= __('WHEdit_area_ph')%>">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">
              <%= __('WHEdit_floor_area')%>
            </label>
            <div class="col-sm-4">
              <input
                type="text"
                class="form-control"
                id="floorArea"
                name="floorArea"
                value="<%= wh.floorArea %>"
                placeholder="<%= __('WHEdit_area_ph')%>">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">
              <%= __('WHEdit_usable_area')%>
            </label>
            <div class="col-sm-4">
              <input
                type="text"
                class="form-control"
                id="useableArea"
                name="useableArea"
                value="<%= wh.useableArea %>"
                placeholder="<%= __('WHEdit_area_ph')%>">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">
              <%= __('WHEdit_price_per')%>
            </label>
            <div class="col-sm-4">
              <input
                type="text"
                class="form-control"
                id="price"
                name="price"
                value="<%= wh.perprice %>"
                placeholder="<%= __('WHEdit_price_per_ph')%>">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">
              <%= __('WHEdit_info')%>
            </label>
            <div class="col-sm-9">
              <input
                type="text"
                class="form-control"
                id="infoComment"
                name="infoComment"
                value="<%= wh.infoComment %>"
                placeholder="<%= __('WHEdit_info_ph')%>">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">
              <%= __('WHEdit_etc')%>
            </label>
            <div class="col-sm-9">
              <input
                type="text"
                class="form-control"
                id="etcComment"
                name="etcComment"
                value="<%= wh.etcComment %>"
                placeholder="<%= __('WHEdit_etc')%>">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">
              <%= __('WHEdit_wh_img')%>
            </label>
            <div class="col-sm-7">
              <input
                type="text"
                class="form-control"
                id="img_name"
                name="img_name"
                readonly="readonly"
                disabled="disabled"
                placeholder="<%= __('WHEdit_wh_img_ph')%>">
            </div>
            <div class="col-sm-2">
              <label class="form-control btn-primary" for="profile_img" style="text-align:center;">
                <%= __('WHEdit_upload_img')%>
              </label>
              <input type='file' class="upload-btn-hidden" id='profile_img' name='profile_img' accept='image/*'
                multiple />
            </div>
          </div>
          <input type="hidden" name="warehouseID" value="<%= wh.warehouseID %>">
          <div class="center-wrap">
            <input
              type="submit"
              class="btn btn-main btn-two-l"
              id="enrollBtn"
              value="<%= __('WHEdit_apply')%>">
          </div>
        </form>
        <div>
          <input
            type="submit"
            class="btn btn-grey btn-two-l ml-1"
            id="cancelBtn"
            value="<%= __('WHEdit_cancel')%>"
            onclick="history.back()">
        </div>
      </div>
    </section>
    <footer>
      <%- include('../footer') %>
    </footer>
  </div>
</body>

<script src="https://t1.daumcdn.net/mapjsapi/bundle/postcode/prod/postcode.v2.js"></script>
<script>
  $(document).ready(function () {
    var imgTarget = $("#profile_img");
    imgTarget.on("change", function () { // 값이 변경되면
      if (window.FileReader) { // modern browser
        var imgname = $(this)[0].files[0].name;
      } else { // old IE
        var imgname = $(this).val().split('/').pop().split('\\').pop(); // 파일명만 추출
      } // 추출한 파일명 삽입
      $("#img_name").val(imgname);

    });
  });

  function sample4_execDaumPostcode() {
    new daum.Postcode({
      oncomplete: function (data) {
        var roadAddr = data.roadAddress;
        document.getElementById("zipcode").value = data.zonecode;
        document.getElementById("address").value = data.roadAddressEnglish;
        var baseAPIUrl = 'https://maps.googleapis.com/maps/api/geocode/json?address=';
        baseAPIUrl = baseAPIUrl + roadAddr + "&key=" + "<%= process.env.GOOGLE_MAP_GEOCODING_KEY %>"
        $.ajax({
          url: baseAPIUrl,
          type: "GET",
          success: function (data) {
            document.getElementById("lat").value = data.results[0].geometry.location.lat;
            document.getElementById("lng").value = data.results[0].geometry.location.lng;
          }
        });
      }
    }).open();
  }
</script>

</html>
