<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <link rel='stylesheet' href='/CSS/nav.css'>
</head>

<body>
    <nav class='nav-bar'>
        <div class='top'>
            <img id='logo-img' src='/Image/inven_logo.png' alt='logo' />
            <div class='items-wrapper'>
                <div class='item-category'>Main Menu</div>
                <ul>
                    <li class='item dashboard'>
                        <img class='icon-img' src='/Image/Chart_fill.png' alt="chart_fill">
                        <div>Dashboard</div>
                    </li>
                    <li class='item my-warehouse'>
                        <img class='icon-img' src='/Image/User_box.png' alt="user_box">
                        <div>My WareHouse</div>
                    </li>
                    <li class='item analytics'>
                        <img class='icon-img' src='/Image/Chart_alt.png' alt="chart_alt">   
                        <div>Analytics</div>
                    </li>
                </ul>
            </div>
        </div>
        <div class='bottom'>
            <img id='help-img' src='/Image/help_logo.png' alt='help'/>
            <div class='help'>Need Help with AutoIN</div>
            <div class='contact-btn'>Contact Us</div>
        </div>
    </nav>
    <script>
        $('#logo-img').click(()=>{
            location.href = '/';
        })
        $('.dashboard').click(()=>{
            location.href = '/Iot/Monitoring';
        })
        $('.my-warehouse').click(()=>{
            let url = null;
            switch('<%=user_type%>'){
                case 'buyer':
                    url = '/Buyer/RequestStatus';
                    break;
                case 'provider':
                    url = '/Provider/MyWarehouse';
                    break;
                case 'admin':
                    url = '/Admin/WarehouseList';
                    break;
            }
            location.href = url;
        })
        $('.analytics').click(()=>{
            location.href = '/Iot/Statistic';
        })
    </script>
</body>

</html>